    "@repo/storage": "workspace:*",
    "effect": "catalog:",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/testing": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "dotenv-cli": "catalog:",
    "prettier": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
