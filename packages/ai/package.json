{
  "name": "@repo/ai",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./llm": {
      "types": "./dist/src/llm/index.d.ts",
      "default": "./src/llm/index.ts"
    },
    "./tts": {
      "types": "./dist/src/tts/index.d.ts",
      "default": "./src/tts/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --build tsconfig.package.json",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "typecheck": "tsc --build --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@ai-sdk/google": "^2.0.44",
    "@ai-sdk/openai": "^1.0.0",
    "@repo/effect": "workspace:*",
    "ai": "^5.0.0",
    "effect": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "jest": "catalog:",
    "prettier": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:"
  }
}
