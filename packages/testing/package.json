{
  "name": "@repo/testing",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./mocks": {
      "types": "./dist/src/mocks/index.d.ts",
      "default": "./src/mocks/index.ts"
    },
    "./factories": {
      "types": "./dist/src/factories/index.d.ts",
      "default": "./src/factories/index.ts"
    },
    "./setup": {
      "types": "./dist/src/setup/index.d.ts",
      "default": "./src/setup/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc --build tsconfig.package.json",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --build --noEmit --emitDeclarationOnly false"
  },
  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@repo/ai": "workspace:*",
    "@repo/auth-policy": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/queue": "workspace:*",
    "@repo/storage": "workspace:*",
    "drizzle-orm": "catalog:",
    "effect": "^3.16.0",
    "pg": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/node": "catalog:",
    "@types/pg": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
